{% extends '@CrosierLibBase/index.html.twig' %}


{% block page_content %}



    <div class="container">
        <div class="animated fadeIn">

            <div class="card">

                <div class="card-header">
                    <h3>Carregar arquivo</h3>
                </div>


                <div class="card-body">

                    <form method="POST" enctype="multipart/form-data" name="frmImportarArquivo" href="{{ url('est_produto_importarExcel') }}">

                        <div class="row">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <label for="arquivo" class="required">Arquivo</label>
                                    <input type="file" class="form-control" id="arquivo" name="arquivo" required="required" class="focusOnReady form-control" value="36">
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-primary" value="Salvar">
                                    <i class="fas fa-save" aria-hidden="true"></i> Importar
                                </button>
                            </div>

                        </div>

                    </form>

                </div>
            </div>


        </div>
    </div>


{% endblock %}
