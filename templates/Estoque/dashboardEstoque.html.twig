{% extends '@CrosierLibBase/index.html.twig' %}


{% block page_content %}



    <div class="container">
        <div class="animated fadeIn">

            <div class="row mt-3">
                <div class="col-sm-12">

                    <div class="card">

                        <div class="card-header">
                            <div class="d-flex flex-wrap align-items-center">
                                <div class="d-sm-flex text-nowrap mr-1">
                                    <h3>Estatísticas do Cadastro</h3>
                                </div>
                            </div>
                        </div>


                        <div class="card-body">


                            <div class="d-flex">


                                <div class="card flex-fill m-2">
                                    <div class="card-body p-0 d-flex align-items-center">
                                        <a href="{{ url('est_produto_list', {'filter' : {'tituloIsNotEmpty' : 'true'}}) }}">
                                            <i class="fas fa-boxes bg-info p-4 px-5 font-2xl mr-3"></i>
                                        </a>
                                        <div>
                                            <div class="text-value-sm text-info">{{ qtdeProdutosComTitulo }}</div>
                                            <div class="text-muted text-uppercase font-weight-bold small">produtos
                                                cadastrados (com título)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card flex-fill m-2">
                                    <div class="card-body p-0 d-flex align-items-center">
                                        <a href="{{ url('est_produto_list', {'filter' : {'qtdeImagens' : 0, 'tituloIsNotEmpty' : 'true'}}) }}">
                                            <i class="fas fa-eye-slash bg-warning p-4 px-5 font-2xl mr-3"></i>
                                        </a>
                                        <div>
                                            <div class="text-value-sm text-info">{{ qtdeProdutosComTituloESemFoto }}</div>
                                            <div class="text-muted text-uppercase font-weight-bold small">produtos
                                                sem imagens
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>


                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Por departamentos</h5>
                                    <div class="card-text">

                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <td>Departamento</td>
                                                <td class="text-right">Qtde Produtos</td>
                                                <td class="text-right"></td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for depto, qtde in deptos %}
                                                <tr>
                                                    <td>{{ depto }}</td>
                                                    <td class="text-right">{{ qtde }}</td>
                                                    <td class="text-right">
                                                        <a role="button" class="btn btn-sm btn-outline-info"
                                                           href="{{ url('est_produto_list', {'filter' : {'nomeDepto' : depto}}) }}">
                                                            <i class="fas fa-th-list"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>


                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Por preenchimento</h5>
                                    <div class="card-text">

                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <td>%</td>
                                                <td class="text-right">Qtde Produtos</td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for pp in porcentPreench %}
                                                <tr>
                                                    <td>{{ pp.msg }}</td>
                                                    <td class="text-right">{{ pp.qtde }}</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>




{% endblock %}

{% block down_scripts %}

{% endblock %}