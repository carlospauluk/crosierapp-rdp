{% extends '@CrosierLibBase/list.html.twig' %}

{% block btns %}
    {{ parent() }}

    <span style="display: none" id="span_pvId">{{  routeParams.pv }}</span>

    <a role="button" href="{{ url('ven_pv_form', {'id': routeParams.pv}) }}#itens"
       class="btn btn-dark ml-1">
        <i class="fas fa-shopping-cart"></i> PV <span class="badge badge-light">{{ qtdeProdutosNoCarrinho }}</span>
    </a>

    {% if filter.codFornecedor|default('') != '' %}
        <a role="button" href="#" data-target="#confirmationModal" data-toggle="modal"
           data-url="{{ url('relEstoque01_carrinho_adicionarTudoNoCarrinho', {'filter': filter}) }}"
           class="btn btn-primary ml-1"
           title="Adicionar todos os produtos do fornecedor listado ao carrinho">
            <i class="fas fa-folder-plus"></i> Adicionar Tudo</a>
    {% endif %}

{% endblock %}


{% block campos_pesquisar %}

    <div class="form-group">
        <label for="filter_nome">Produto</label>
        <input type="text"
               class="form-control" id="filter_nome"
               name="filter[nome]"
               value="{{ filter.nome|default('') }}">
    </div>

{% endblock %}


{% block down_scripts %}
    <script src="{{ asset('build/Vendas/produto_list.js') }}"></script>
{% endblock %}
