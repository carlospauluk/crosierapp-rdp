<div class="tab-pane fade" id="itens" role="tabpanel" aria-labelledby="itens-tab">

    {% if e.id %}
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h5>Itens do PV</h5>
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-primary" title="Pesquisar no estoque para incluir itens"
                                onclick="window.location.href='{{ url('ven_pv_relEstoque01_list', {pv: e.id} ) }}'">
                            <i class="fas fa-search-plus"></i> Estoque
                        </button>
                    </div>
                </div>

            </div>

            <div class="card-body">

                <div class="table-responsive-sm">
                    <table class="table table-striped table-hover">

                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Produto</th>
                            <th scope="col">Qtde</th>
                            <th scope="col">Vlr Unit</th>
                            <th scope="col">Desconto</th>
                            <th scope="col">Vlr Total</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for item in e.itens %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>
                                    {{ item.produtoCod }} - {{ item.produtoDesc }}
                                    <br/>
                                    <span style="font-size: small">{{ item.codFornecedor }} - {{ item.nomeFornecedor }}</span>
                                </td>
                                <td>{{ item.qtde|number_format(2,',','.') }}</td>
                                <td>{{ item.precoOrc|number_format(2,',','.') }}</td>
                                <td>{{ item.desconto|number_format(2,',','.') }}</td>
                                <td>{{ item.total|number_format(2,',','.') }}</td>
                                <td class="text-right">
                                        <button type="button" class="btn btn-sm btn-primary"
                                                onclick="window.location.href='{{ url('ven_pvItem_form', {pv: e.id, 'item': item.id} ) }}'">
                                            <i class="fas fa-wrench" aria-hidden="true"></i>
                                        </button>

                                        <button type="button" class="btn btn-sm btn-danger"
                                                data-url="{{ url('ven_pvItem_delete', {'pvItem': item.id}) }}"
                                                data-token="{{ csrf_token('delete') }}"
                                                data-target="#confirmationModal" data-toggle="modal">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>


                {{ form_row(form.subtotal) }}
                {{ form_row(form.descontos) }}
                {{ form_row(form.total) }}

            </div>
        </div>
    {% endif %}

</div>
